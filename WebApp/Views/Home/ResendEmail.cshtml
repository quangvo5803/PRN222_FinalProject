@{
    ViewData["Title"] = "Resend Confirmation Email";
}

<div class="confirmation-form">
    <section class="py-3 py-md-5 py-xl-8 confirmation-background">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm my-5">
                        <div class="card-body p-4">
                            <h2 class="card-title text-center mb-4">Confirm Your Email</h2>
                            
                            <form method="post">
                                <div class="row gy-3">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input 
                                                class="form-control border-0 border-bottom rounded-0" 
                                                id="email" 
                                                name="email" 
                                                type="email" 
                                                placeholder="name@example.com" 
                                                required 
                                                autocomplete="email"
                                            >
                                            <label for="email" class="form-label">
                                                <i class="bi bi-envelope"></i> Email Address
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-success btn-lg" type="submit">
                                                Send Confirmation Email
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            
                            <div class="text-center mt-3">
                                <p class="text-muted">
                                    Already confirmed? <a asp-action="Login" class="text-decoration-underline">Back to Login</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

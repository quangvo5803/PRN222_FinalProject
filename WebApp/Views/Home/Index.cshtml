@model IEnumerable<Product>
@{
    var randomFoodItems = Model.Where(p => p.Category?.Name == "Food").OrderBy(x => Guid.NewGuid()).Take(8).ToList();
    var randomDrinkItems = Model.Where(p => p.Category?.Name == "Drink").OrderBy(x => Guid.NewGuid()).Take(8).ToList();
    var randomComboItems = Model.Where(p => p.Category?.Name == "Combo").OrderBy(x => Guid.NewGuid()).Take(8).ToList();
}

@{
    ViewData["Title"] = "Home Page";
}


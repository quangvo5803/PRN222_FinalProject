                    <div class="btn-group" role="group">
                        <a asp-action="" asp-controller="" class="btn btn-primary py-sm-3 px-sm-5 me-3">Book A Table</a>
                        <a asp-action="" asp-controller="" class="btn btn-outline-primary py-sm-3 px-sm-5">Order Now</a>
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-end overflow-hidden">
                <img class="img-fluid" src="img/hero.png" alt="">
            </div>
        </div>
    </div>
</div>


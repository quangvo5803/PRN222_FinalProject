@{
    ViewData["Title"] = "Register";
}

<div class="register-form">
    <section class="py-3 py-md-5 py-xl-8 login-background">
        <div class="container pb-3">
            <div class="row">
                <div class="col-12">
                    <div class="mb-5">
                        <h2 class="display-5 fw-bold text-center">Register</h2>
                        <p class="text-center m-0">
                            Already have an account? <a asp-action="Login">Login</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-5">
                            <form method="post">
                                <div class="row gy-3 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input class="form-control border-0 border-bottom rounded-0" name="email" type="email" placeholder="name@example.com" value="@ViewBag.Email" required>
                                            <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3 position-relative">
                                            <input id="password" class="form-control border-0 border-bottom rounded-0" name="password" type="password" placeholder="Password" required>
                                            <label class="form-label"><i class="bi bi-lock"></i> Password</label>
                                            <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="password" style="cursor: pointer;"></i>
                                        </div>
                                        <ul class="password-criteria list-unstyled mt-2">
                                            <li id="criteria-length" class="text-muted"><i class="bi bi-x-circle"></i> At least 8 characters</li>
                                            <li id="criteria-uppercase" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 uppercase letter</li>
                                            <li id="criteria-number" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 digit</li>
                                            <li id="criteria-special" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 special character (!#$%^&*)</li>
                                        </ul>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3 position-relative">
                                            <input id="repassword" class="form-control border-0 border-bottom rounded-0" name="repassword" type="password" placeholder="Re-enter password" required>
                                            <label class="form-label"><i class="bi bi-lock"></i> Re-enter password</label>
                                            <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="repassword" style="cursor: pointer;"></i>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-success btn-lg" type="submit">Register</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-12 col-lg-2 d-flex align-items-center justify-content-center gap-3 flex-lg-column">
                            <div class="bg-dark h-100 d-none d-lg-block" style="width: 1px; --bs-bg-opacity: .1;"></div>
                            <div class="bg-dark w-100 d-lg-none" style="height: 1px; --bs-bg-opacity: .1;"></div>
                            <div>Hoặc</div>
                            <div class="bg-dark h-100 d-none d-lg-block" style="width: 1px; --bs-bg-opacity: .1;"></div>
                            <div class="bg-dark w-100 d-lg-none" style="height: 1px; --bs-bg-opacity: .1;"></div>
                        </div>
                        <div class="col-12 col-lg-5 d-flex align-items-center">
                            <div class="w-100">
                                <a asp-controller="Home" asp-action="LoginWithGoogle" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-google"></i> Đăng nhập bằng Google
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/passwordvalidate.js" asp-append-version="true"></script>

}
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

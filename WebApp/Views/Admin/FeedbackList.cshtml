@model IEnumerable<BusinessObject.Model.Feedback>

@{
    ViewData["Title"] = "Feedback List";
}
<div class="admin-margin">
    <h2>Feedback List</h2>

    <table class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Product</th>
                <th>Stars</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.Id</td>
                    <td>@feedback.User?.UserName</td>
                    <td>@feedback.Product?.Name</td>
                    <td>@feedback.FeedbackStars</td>
                    <td>@feedback.FeedbackContent</td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </p>
</div>

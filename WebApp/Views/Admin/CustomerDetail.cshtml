@model BusinessObject.Model.User

@{
    ViewData["Title"] = "Customer Detail";
}

<style>
    .admin-margin {
        padding: 20px;
        max-width: 900px;
        margin: 0 auto;
    }

    h2-2 {
        color: #2c3e50;
        border-bottom: 3px solid yellow;
        padding-bottom: 10px;
        margin-bottom: 30px;
    }

    .dl-horizontal dt {
        font-weight: 600;
        color: #34495e;
        padding: 12px 0;
        border-bottom: 1px solid #ecf0f1;
    }

    .dl-horizontal dd {
        padding: 12px 0;
        margin: 0;
        border-bottom: 1px solid #ecf0f1;
        color: #2c3e50;
    }

    .row {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .btn-secondary {
        background-color: #3498db;
        border: none;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s ease;
        margin-top: 20px;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
</style>

<div class="admin-margin">
    <h2 class="h2-2">Customer Detail</h2>

    <div>
        <dl class="row dl-horizontal">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">@Model.UserName</dd>

            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>

            <dt class="col-sm-2">Date of Birth</dt>
            <dd class="col-sm-10">@(Model.DOB.HasValue ? Model.DOB.Value.ToString("dd/MM/yyyy") : "Not specified")</dd>

            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@(Model.Gender.HasValue ? Model.Gender.ToString() : "Not specified")</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@(Model.Address ?? "Not specified")</dd>

            <dt class="col-sm-2">Email Confirmed</dt>
            <dd class="col-sm-10">@(Model.IsEmailConfirmed ? "Yes" : "No")</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">@Model.Role</dd>
        </dl>
    </div>

    <div>
        <a asp-action="CustomerList" class="btn btn-secondary">Back to List</a>
    </div>
</div>
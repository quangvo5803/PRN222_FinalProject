@model IEnumerable<BusinessObject.Model.Category>

@{
    ViewData["Title"] = "Category List";
}
<div class="admin-margin">
    <h2>Category List</h2>

    <p>
        <a asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                        <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
</p>
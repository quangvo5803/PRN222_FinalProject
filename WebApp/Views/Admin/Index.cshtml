@{
    ViewData["Title"] = "Home Page";
    var avgRating = ViewBag.AvgRating as double?;
    var userCount = ViewBag.UserCount as int?;
    var totalOrdersMonthly = ViewBag.TotalOrdersMonthly as int?;
    var earningsMonth = ViewBag.EarningsMonth as double?;
}
<div class="admin-margin">
    <div class="container mt-5">
        <div class="row">
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-uppercase mb-1" style="color:#4e73df !important">
                                    Total Order(Monthly)
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@totalOrdersMonthly</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-truck fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Annual) Card Example -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Earnings (Month)
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @String.Format("{0:N0} VND", earningsMonth)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tasks Card Example -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total User
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@userCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests Card Example -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Feedback
                                </div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@avgRating</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-warning" role="progressbar"
                                                 style="width: @(avgRating/5)" aria-valuenow="@(avgRating/5*100)" aria-valuemin="0"
                                                 aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-star fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Content Row -->

    <div class="container mt-5">
        <div class="row">

            <!-- Area Chart -->
            <div class="col-md-8 col-lg-7">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Earnings Overview</h6>
                        <div class="dropdown">
                            <form id="yearForm" method="get" asp-controller="Admin" asp-action="Index">
                                <select id="yearSelector" name="year" class="form-control" onchange="this.form.submit()">
                                    @foreach (var year in ViewBag.Years)
                                    {
                                        <option value="@year.Value" selected="@(year.Value == ViewBag.SelectedYear.ToString() ? "selected" : null)">
                                            @year.Value
                                        </option>
                                    }
                                </select>
                            </form>
                        </div>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-md-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Revenue Sources</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="myPieChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Content Row -->
<style>
    .card.shadow.mb-4 {
        min-height: 500px;
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
</style>
@section Scripts{
    <script>
        // Biểu đồ đường (Earnings Overview)
        var totalPriceData = @Html.Raw(Json.Serialize(ViewBag.TotalPrice));
        var ctx1 = document.getElementById("myAreaChart").getContext("2d");
        var myAreaChart = new Chart(ctx1, {
            type: "line",
            data: {
                labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
                datasets: [{
                    label: "Earnings (VND)",
                    data: totalPriceData,
                    backgroundColor: "rgba(78, 115, 223, 0.2)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    borderWidth: 2,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        grid: { display: false }
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Biểu đồ tròn (Revenue Sources)
        var labels = @Html.Raw(Json.Serialize(ViewBag.CategoryNames));
        var data = @Html.Raw(Json.Serialize(ViewBag.TotalQuantities));
        var ctx2 = document.getElementById("myPieChart").getContext("2d");
        var myPieChart = new Chart(ctx2, {
            type: "doughnut",
            data: {
                labels: labels,
                datasets: [{
                    data: data,
                    backgroundColor: ["#FF6B6B", "#4D96FF", "#F9C74F", "#90BE6D", "#F94144"]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'bottom'
                }
            }
        });
    </script>
}


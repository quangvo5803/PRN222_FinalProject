@model User

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Sidebar -->
                        <div class="col-lg-3 border-end">
                            <div class="p-4">
                                <div class="nav flex-column nav-pills">
                                    <a class="nav-link text-black" asp-action="Profile"> <i class="fa fa-user me-2"></i> Information </a>
                                    <a class="nav-link  active text-white" asp-action="ChangePassword" style="background-color: #FEA116 !important;">
                                        <i class="fa fa-lock me-2"></i> Security
                                    </a>
                                    <a class="nav-link text-black" asp-action="OrderHistory"><i class="fa fa-truck-fast me-2"></i> Order History</a>
                                </div>
                            </div>
                        </div>

                        <!-- Content Area -->
                        <div class="col-lg-9">
                            <div class="p-4">
                                <form asp-action="ChangePassword" method="post">
                                    <div class="mb-4">
                                        <h5 class="mb-4">Change password</h5>
                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 position-relative">
                                                    <input id="oldpassword" class="form-control border-0 border-bottom rounded-0" name="oldpassword" type="password" placeholder="Current password" required>
                                                    <label class="form-label"><i class="bi bi-lock"></i> Current password</label>
                                                    <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="oldpassword" style="cursor: pointer;"></i>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 position-relative">
                                                    <input id="password" class="form-control border-0 border-bottom rounded-0" name="password" type="password" placeholder="New password" required>
                                                    <label class="form-label"><i class="bi bi-lock"></i> New password</label>
                                                    <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="password" style="cursor: pointer;"></i>
                                                </div>
                                                <ul class="password-criteria list-unstyled mt-2">
                                                    <li id="criteria-length" class="text-muted"><i class="bi bi-x-circle"></i> At least 8 characters</li>
                                                    <li id="criteria-uppercase" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 uppercase letter</li>
                                                    <li id="criteria-number" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 digit</li>
                                                    <li id="criteria-special" class="text-muted"><i class="bi bi-x-circle"></i> Contains at least 1 special character (!#$%^&*)</li>
                                                </ul>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 position-relative">
                                                    <input id="repassword" class="form-control border-0 border-bottom rounded-0" name="repassword" type="password" placeholder="Re-enter new password" required>
                                                    <label class="form-label"><i class="bi bi-lock"></i> Re-enter new password</label>
                                                    <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 toggle-password" data-target="repassword" style="cursor: pointer;"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Save Button -->
                                    <div class="d-flex justify-content-end mb-4 me-4">
                                        <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
                                    </div>
                                </form>
                            </div>
                        </div> <!-- End Content Area -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/passwordvalidate.js" asp-append-version="true"></script>
}

<link rel="stylesheet" href="~/css/feedback.css">
<button id="btnFeedback" class="btn btn-outline-primary shadow-0" data-bs-toggle="modal" data-bs-target="#feedbackModal">Feedback</button>
<!-- Modal Feedback  -->
<div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg w-100">
        <div class="modal-content">
            <form asp-action="SubmitFeedBack" asp-controller="Customer" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="feedbackModalLabel">Feedback Product</h5>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="p-4 bg-light border rounded">
                        <div class="review-guide">
                            <span>⭐ Please send us your review 🤗</span>
                        </div>
                        <div class="product-info">
                            <img src="/img/products/@Model.ProductAvatar?.ImagePath" alt="Sản phẩm" class="product-image">
                            <div class="product-details">
                                <p class="product-name">@Model.Name</p>
                                <p class="product-type">Category: @Model.Category?.Name</p>
                                <input type="hidden" name="productId" value="@Model.Id" />
                            </div>
                        </div>
                        <div class="rating-section">
                            <span>Product quality:</span>
                            <div class="stars" id="starRating">
                                <span class="star" data-value="1">☆</span>
                                <span class="star" data-value="2">☆</span>
                                <span class="star" data-value="3">☆</span>
                                <span class="star" data-value="4">☆</span>
                                <span class="star" data-value="5">☆</span>
                                <span class="rating-text">Excellent</span>
                            </div>
                            <input type="hidden" name="feedbackStars" id="ratingInput" value="5" />
                        </div>
                        <textarea class="review-text form-control" name="feedbackContent"
                                  placeholder="Please share what you like about this product with other buyers."></textarea>
                        <div class="upload-section mt-3">
                            <input type="file" name="images" id="imageInput" multiple accept="image/*" style="display: none;" />
                            <button type="button" class="btn btn-outline-danger" id="addImageBtn" style="margin-bottom:16px;">
                                📷 Add Image
                            </button>
                            <div id="imagePreview" style="display: flex; gap: 10px; flex-wrap: wrap;"></div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end p-3">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                    <button type="submit" class="btn btn-primary me-2" style="margin-left: 11px;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/Customer/Feedback.js"></script>

